# =============================================================================
# Alithia Research Agent Environment Configuration
# =============================================================================
# Copy this file to .env and fill in your actual values
# 
# This configuration supports multiple research agents:
# - arxrec: ArXiv paper recommendation agent
# - lens: Research lens/filtering agent (future)
# - vigil: Research monitoring agent (future)
# =============================================================================

# =============================================================================
# CORE RESEARCH DATA SOURCES
# =============================================================================

# Zotero Configuration (Required for all agents)
# Get these from https://www.zotero.org/settings/keys
ZOTERO_ID=your_zotero_user_id_here
ZOTERO_KEY=your_zotero_api_key_here

# Zotero Collections to Ignore (gitignore-style patterns, one per line)
# Leave empty or comment out to process all collections
ZOTERO_IGNORE=

# =============================================================================
# COMMUNICATION & NOTIFICATIONS
# =============================================================================

# SMTP Configuration for Email Delivery (Required for all agents)
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SENDER=your_email@gmail.com
SENDER_PASSWORD=your_app_password_here
RECEIVER=recipient@example.com

# Email Behavior
SEND_EMPTY=false  # Send email even when no papers are found

# =============================================================================
# AI/LLM CONFIGURATION
# =============================================================================

# OpenAI Configuration (Required for content generation)
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_API_BASE=https://api.openai.com/v1
MODEL_NAME=gpt-4o

# Language for generated content
LANGUAGE=English

# =============================================================================
# ARXREC AGENT CONFIGURATION
# =============================================================================

# Paper Limits and Query
MAX_PAPER_NUM=50

# ArXiv search query (default: AI, Computer Vision, Machine Learning, NLP)
# Format: category1+category2+category3
# Examples: cs.AI+cs.CV+cs.LG+cs.CL, cs.AI+cs.LG, cs.CV+cs.CG
ARXIV_QUERY=cs.AI+cs.CV+cs.LG+cs.CL

# =============================================================================
# LENS AGENT CONFIGURATION (Future)
# =============================================================================

# Research focus areas for filtering
# LENS_RESEARCH_AREAS=AI,ML,Computer Vision,NLP

# Filtering criteria
# LENS_MIN_CITATION_COUNT=10
# LENS_PREFERRED_JOURNALS=Nature,Science,ICML,NeurIPS

# =============================================================================
# VIGIL AGENT CONFIGURATION (Future)
# =============================================================================

# Monitoring frequency (in hours)
# VIGIL_CHECK_INTERVAL=24

# Alert thresholds
# VIGIL_MIN_PAPER_SCORE=7.0
# VIGIL_MAX_PAPERS_PER_ALERT=5

# =============================================================================
# DEVELOPMENT & DEBUGGING
# =============================================================================

# Enable debug mode for development
DEBUG=false

# =============================================================================
# OPTIONAL: VECTOR STORE CONFIGURATION (Future)
# =============================================================================

# Pinecone Vector Database (for advanced similarity search)
# PINECONE_API_KEY=your_pinecone_api_key
# PINECONE_ENVIRONMENT=us-west1-gcp
# PINECONE_INDEX_NAME=alithia-papers

# Supabase Database (for paper storage and metadata)
# SUPABASE_URL=your_supabase_url
# SUPABASE_KEY=your_supabase_anon_key